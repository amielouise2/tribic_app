 <div class="container">

        <div class="row">
            <div class="box">
                <div class="col-lg-12">

<p id="notice"><%= notice %></p>

<h1>Articles</h1>

<table class="table">
  <thead>
    <tr>
      <th colspan="5">Title</th>
      <th colspan="5">Published</th>
      <th colspan="5">Author</th>
      <th colspan="5">Status</th>
      <th colspan="5">Options</th>
      
    </tr>
  </thead>

  <tbody>
    <% @articles.each do |article| %>
      <tr>
        <td colspan="5"><%= article.title %></td>
        <td colspan="5"><%= article.published_on %></td>
        <td colspan="5"><%= article.author %></td>
        <td colspan="5">
          <% if article.draft? %>
            <%= link_to "<i class='fa fa-eye-slash fa-lg publish'></i>".html_safe, publish_article_path(article),  data: { remote: true, confirm: 'Are you sure you want to publish?'} %> &nbsp;
            <% end %>
            <% if article.published? %>
              <%= link_to "<i class='fa fa-globe fa-sm archive'></i>".html_safe, archive_article_path(article), data: { remote: true, confirm: 'Are you sure you want to archive?' } %>
            <% end %>
            <% if article.archived? %>
              <%= link_to "<i class='fa fa-lock fa-sm revive'></i>".html_safe, revive_article_path(article), data: { remote: true, confirm: 'Are you sure you want to revive?'} %> &nbsp;
            <% end %>
          </td>
          <td colspan="5"><%= link_to 'Show', article %> | 
          <%= link_to 'Edit', edit_article_path(article) %> |
        <%= link_to 'Destroy', article, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Article', new_article_path %>
</div></div></div></div>