<div class="container">

        <div class="row">
            <div class="box">
                <div class="col-lg-12">

<p id="notice"><%= notice %></p>

<p>
  <strong>Title:</strong>
  <%= @article.title %>
</p>

<p>
  <strong>slug:</strong>
  <%= @article.slug %>
</p>

<p>
  <strong>Published:</strong>
  <%= @article.published_on %>
</p>

<p>
  <strong>Tags:</strong>
  <%= @article.tags %>
</p>

<p>
  <strong>Body:</strong>
  <%= sanitize @article.body %>
</p>

