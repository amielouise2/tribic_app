
<%= simple_form_for(@article, html: { class: 'form-inline' }) do |form| %>
  <% if article.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(article.errors.count, "error") %> prohibited this article from being saved:</h2>

      <ul>
      <% article.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

    <%= form.label :title %>
    <%= form.input_field :title, as: :string %>
    <%= form.label :meta_title %>
    <%= form.input_field :meta_title, as: :string, required: false %>
    <%= form.label :published_on %>
    <%= form.input_field :published_on,  as: :date, start_year: Date.today.year, order: [:month, :day, :year] %>
    <%= form.label :tags %>
    <%= form.input_field :tags, as: :string, required: false %>
    <%= form.label :body %>
    <%= form.input_field :body, id: :article_body %>
    <trix-editor input="article_body"></trix-editor>
    
    <%= form.label :image %>
    <%= form.input_field :image, as: :file %>
  </div>
  

  <div class="field">
   
    <%= form.input :author, required: false %>
  </div>

  <div class="field">
    <%= form.input :meta_description, required: false %>
  </div>

 

  <div class="actions">
    <%= form.submit %>
  </div>
<% end %>
