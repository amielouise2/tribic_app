<% provide(:title, @article.title) %>


    <div class="container">

        <div class="row">
            <div class="box">
                <div class="col-lg-12">
                <%= image_tag("eventx_release.jpg", class: "img-responsive img-full", alt:"celebration image for eventx beta release")  %>
                </div>
                <div class="col-lg-12 text-center">
                    <h2><%= @article.title %>
                        <br>
                        <small><%= @article.published_on.strftime("%B %d, %Y") %></small>
                    </h2>
                </div>
                <div class="row">
                    <div class="col-md-3"></div>
                    <div class="col-md-6">
                       <p> <%= sanitize @article.body %></p>
                    </div>
                    <div class="col-md-3"></div>    
                </div>
                <div class="row">
                    <div class="col-lg-12 text-center">
                       <p> <%= social_share_button_tag(@article.title) %></p>
                    </div>
                </div>
            </div>
        </div>  
    </div>
              

    